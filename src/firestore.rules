
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Função para verificar se o ID do usuário que faz a requisição corresponde
    // a um documento de usuário que tem o campo role === 'admin'.
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    // Coleção de Usuários:
    match /users/{userId} {
      // Admins podem ler a lista de usuários.
      allow list: if isAdmin();
      // Usuário pode ler/atualizar seu próprio perfil, ou um admin pode fazê-lo.
      allow read, update: if request.auth.uid == userId || isAdmin();
      // Usuário pode criar seu próprio perfil.
      allow create: if request.auth.uid == userId;
      // Exclusão não é permitida diretamente pelas regras de cliente.
      allow delete: if false;
    }

    // Subcoleções de Usuários: Acesso restrito ao dono dos dados ou admin.
    match /users/{userId}/{subcollection}/{docId} {
      allow read, write, create, delete: if request.auth.uid == userId || isAdmin();
    }

    // Coleção de Salas (Rooms): Apenas participantes ou admins podem ler.
    match /rooms/{roomId} {
      function isParticipant() {
        return request.auth.uid == resource.data.professionalId || request.auth.uid == resource.data.patientId;
      }
      allow read: if isParticipant() || isAdmin();
      // Apenas o profissional responsável pode atualizar a sala.
      allow update: if request.auth.uid == resource.data.professionalId;
      // Ninguém pode criar ou deletar uma sala diretamente (isso é feito via transação segura).
      allow create, delete: if false;
    }
    
    // Subcoleção de Mensagens nas Salas: Apenas participantes ou admins podem interagir.
    match /rooms/{roomId}/messages/{messageId} {
       function isParticipant() {
        let roomData = get(/databases/$(database)/documents/rooms/$(roomId)).data;
        return request.auth.uid == roomData.professionalId || request.auth.uid == roomData.patientId;
      }
      allow read, create: if isParticipant() || isAdmin();
      // Ninguém pode editar ou deletar mensagens.
      allow update, delete: if false;
    }

    // Logs de Webhook: Apenas admins podem ler. Ninguém pode escrever via cliente.
    match /webhook_logs/{logId} {
      allow read: if isAdmin();
      allow write: if false;
    }
  }
}
