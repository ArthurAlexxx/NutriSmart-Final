rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que usuários autenticados leiam e escrevam arquivos
    // somente em suas próprias pastas de usuário.
    match /meal-photos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
